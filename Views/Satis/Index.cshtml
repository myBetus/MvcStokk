@model MvcStokk.Models.Entitiy.Satis
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<button type="button" class="=btn btn-primary" data-toggle="modal" data-target="#Modal1">SATIŞ YAP</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog" >
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">SATIŞ YAPMA EKRANI</h2>
            </div>
            <form method="post" action="/Satis/YeniSatis">
                <div class="modal-body">
                    <label>Ürün Adı</label>
                    @Html.TextBoxFor(m=>m.Urun, new {@class="form-control"}) 
                    <br />
                    <label>Müşteri Adı Soyadı</label>
                    @Html.TextBoxFor(m=>m.Musteri, new {@class="form-control" })
                    <br />
                    <label>Adet</label>
                   @Html.TextBoxFor(m=>m.Adet, new {@class="form-control"})
                    <br />
                    <label>Fiyat</label>
                    @Html.TextBoxFor(m=>m.fiyat, new { @class="form-control"})
                    <br />
                    <button type="submit" class="btn btn-info">SATIŞ İŞLEMİNİ YAP</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">VAZGEÇ</button>
                </div>
            </form>
        </div>
    </div>

</div>

