@using MvcStokk.Models.Entitiy;
@model List<Musteri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Ad</th>
        <th>Müşteri Soyad</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @using (Html.BeginForm("Index","Musteri",FormMethod.Get))
            {
                <p>
                    Aranacak Müşteri Adı:@Html.TextBox("p");
                    <input type="submit" value="ARA" />
                </p>
            }
        @foreach (var musteriler in Model)
        {
        <tr>
            <td>@musteriler.MusteriID</td>
            <td>@musteriler.MusteriAd</td>
            <td>@musteriler.MusteriSoyad</td>
            <td><a href="/Musteri/SIL/@musteriler.MusteriID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Musteri/MusteriGetir/@musteriler.MusteriID" class="btn btn-success">GÜNCELLE</a></td>
            <td>@Html.ActionLink("SİL BUTONU", "SIL", new { id = musteriler.MusteriID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })</td>
        </tr>
            }
    </tbody>
</table>
<a href="/Musteri/YeniMusteriEkle" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>